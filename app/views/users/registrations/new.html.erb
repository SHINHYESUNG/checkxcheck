<div class ="form-sign">
<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true ,:placeholder=>'Email'%></div>

  <div><%= f.label :password %>
  <%= f.password_field :password ,:placeholder=>'Password'%></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :placeholder=>'Password confirmation' %></div>

  <div><%= f.submit "Sign up",:class=>'btn btn-info' %></div>
</br>
<%= render "users/shared/links" %>
<% end %>
</div>

